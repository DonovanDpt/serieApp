<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    </head>
    <header>
        <nav>
            <ul>
                <li>
                    <a href="{{ path('home_index') }}">Home</a>
                    <a href="{{ path('serie_series') }}">Série</a>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('serie_ajouter') }}">Ajouter une série</a>
                    {% endif %}
                </li>
                {% if app.user %}
                    <li>{{ app.user.pseudo }}</li>
                    <li><a href="{{ path('app_logout') }}">Deconnexion</a></li>
                {% endif %}
                {% if not app.user %}
                    <li><a href="{{ path('app_login') }}">Connexion</a></li>
                {% endif %}
            </ul>
        </nav>
    </header>
    <body>
        {% block body %}{% endblock %}
    </body>
</html>
